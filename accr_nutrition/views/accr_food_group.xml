<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_accr_food_group_tree" model="ir.ui.view">
            <field name="name">accr.food.group.tree</field>
            <field name="model">accr.food.group</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Food Group" editable="bottom">
                    <field name="name" string="Food Group" />
                    <field name="food" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record id="view_accr_food_group_form" model="ir.ui.view">
            <field name="name">accr.food.group.form</field>
            <field name="model">accr.food.group</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Food Group">
                    <sheet>
                        <group col="4">
                            <field name="name" string="Food Group" />
                        </group>
                        <group col="4">
                            <field name="food" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_accr_food_group_search" model="ir.ui.view">
            <field name="name">accr.food.group.search</field>
            <field name="model">accr.food.group</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Food Group">
                    <field name="name" select="True" string="Food Group"/>
                    <field name="food" select="True" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_food_group_view">
            <field name="name">Food Group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accr.food.group</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_accr_food_group_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_food_group_view_form">
            <field name="act_window_id" ref="act_open_food_group_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_accr_food_group_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_food_group_view_tree">
            <field name="act_window_id" ref="act_open_food_group_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_accr_food_group_tree" />
        </record>

    </data>
</odoo>