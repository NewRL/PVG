<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_accr_nutrition_student_notification_tree" model="ir.ui.view">
            <field name="name">accr.nutrition.student.notification.tree</field>
            <field name="model">accr.nutrition.student.notification</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Students" default_order="passport_expiration_date">
                    <field name="student"/>
                    <field name="message"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_accr_nutrition_student_notification_kanban">
            <field name="name">accr.nutrition.student.notification.kanban</field>
            <field name="model">accr.nutrition.student.notification</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_small_column">
                    <field name="student"/>
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="#{kanban_color(record.color.raw_value)} oe_kanban_global_click">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" role="button">
                                        <span class="fa fa-bars fa-lg"/>
                                    </a>
                                    <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                        <li>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </li>
                                    </ul>
                                </div>
                                <div class="oe_kanban_content">
                                    <div>
                                        <strong>
                                            <field name="student"/>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_left">
                                        <li t-if="record.passport_expiration_date.raw_value">
                                            <b>Message:</b>
                                            <field name="message"/>
                                        </li>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_accr_nutrition_student_notification_form" model="ir.ui.view">
            <field name="name">accr.nutrition.student.notification.form</field>
            <field name="model">accr.nutrition.student.notification</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <group>
                            <h1>
                                <field name="student"/>
                            </h1>
                        </group>
                        <group colspan="4" col="4">
                            <field name="message" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_accr_nutrition_student_notification_view">
            <field name="name">Students Notifications</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accr.nutrition.student.notification</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban</field>
            <!-- <field name="search_view_id" ref="view_op_session_search"/> -->
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_accr_nutrition_student_notification_view_tree">
            <field name="act_window_id" ref="act_open_accr_nutrition_student_notification_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_accr_nutrition_student_notification_tree"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_accr_nutrition_student_notification_view_form">
            <field name="act_window_id" ref="act_open_accr_nutrition_student_notification_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_accr_nutrition_student_notification_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_accr_nutrition_student_notification_view_kanban">
            <field name="act_window_id" ref="act_open_accr_nutrition_student_notification_view"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_accr_nutrition_student_notification_kanban"/>
        </record>

    </data>
</odoo>