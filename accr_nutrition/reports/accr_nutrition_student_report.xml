<?xml version="1.0"?>
<odoo>
    <report id="accr_nutrition_student_report" string="Student Nutrition Report" model="accr.nutrition.student" report_type="qweb-pdf" name="accr_nutrition.report_accr_nutrition_student_report_template" />
    <template id="report_accr_nutrition_student_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Report header content -->
                    <br/>
                    <br/>
                    <div class="row bg-primary">
                        <div class="col-12 h3" style="text-align: center;">
                            <span>Student Nutrition Report</span>
                        </div>
                    </div>
                    <br/>
                    <br/>

                    <t t-foreach="docs" t-as="doc">
                        <!-- Report row content -->
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Student: </Strong>
                                </span>
                                <span t-field="doc.student"/>
                            </div>
                        </div>
                        <hr/>
                        <h3>BCA</h3>
                        <t t-set="height" t-value="0" />
                        <t t-set="ideal_weight" t-value="0.0" />
                        <t t-set="actual_weight" t-value="0.0" />
                        <t t-set="bmr" t-value="" />
                        <t t-set="fat_kg" t-value="0.0" />
                        <t t-set="fat_percentage" t-value="0" />
                        <t t-set="mucles_kg" t-value="0.0" />
                        <t t-set="lean_muscles" t-value="0" />
                        <t t-set="fat_control_kg" t-value="0.0" />
                        <t t-set="muscles_control_kg" t-value="0.0" />
                        <t t-set="icw" t-value="0" />
                        <t t-set="ecw" t-value="0" />
                        <script type="text/javascript">
                            graph_records = [{ key: 'Height', values: [] }, {key: 'ideal_weight', values: []},
                             {key: 'actual_weight', values: [] }, {key: 'fat_kg', values: [] }, {key: 'fat_percentage', values: [] }, 
                             {key: 'mucles_kg', values: [] }, {key: 'lean_muscles', values: [] }, {key: 'fat_control_kg', values: [] }, 
                             {key: 'muscles_control_kg', values: [] }, {key: 'icw', values: [] }, {key: 'ecw', values: [] }];
                             graph_record_sequence = 0;
                            <t t-foreach="doc.bca" t-as="bca" t-set="height" t-value="bca.height">
                                <t t-set="height" t-value="bca.height"/>
                                height = <t t-esc="height" />
                                graph_records[0].values.push({x: graph_record_sequence, y: height });
                                <t t-set="ideal_weight" t-value="bca.ideal_weight" />
                                ideal_weight = <t t-esc="ideal_weight" />
                                graph_records[1].values.push({x: graph_record_sequence, y: ideal_weight });
                                <t t-set="actual_weight" t-value="bca.actual_weight" />
                                actual_weight = <t t-esc="actual_weight" />
                                graph_records[2].values.push({x: graph_record_sequence, y: actual_weight });
                                <t t-set="bmr" t-value="bca.bmr.display_name" />
                                <t t-set="fat_kg" t-value="bca.fat_kg" />
                                fat_kg = <t t-esc="fat_kg" />
                                graph_records[3].values.push({x: graph_record_sequence, y: fat_kg });
                                <t t-set="fat_percentage" t-value="bca.fat_percentage" />
                                fat_percentage = <t t-esc="fat_percentage" />
                                graph_records[4].values.push({x: graph_record_sequence, y: fat_percentage });
                                <t t-set="mucles_kg" t-value="bca,mucles_kg" />
                                mucles_kg = <t t-esc="mucles_kg" />
                                graph_records[5].values.push({x: graph_record_sequence, y: mucles_kg });
                                <t t-set="lean_muscles" t-value="bca.lean_muscles" />
                                lean_muscles = <t t-esc="lean_muscles" />
                                graph_records[6].values.push({x: graph_record_sequence, y: lean_muscles });
                                <t t-set="fat_control_kg" t-value="bca.fat_control_kg" />
                                fat_control_kg = <t t-esc="fat_control_kg" />
                                graph_records[7].values.push({x: graph_record_sequence, y: fat_control_kg });
                                <t t-set="muscles_control_kg" t-value="bca.muscles_control_kg" />
                                muscles_control_kg = <t t-esc="muscles_control_kg" />
                                graph_records[8].values.push({x: graph_record_sequence, y: muscles_control_kg });
                                <t t-set="icw" t-value="bca.icw" />
                                icw = <t t-esc="icw" />
                                graph_records[9].values.push({x: graph_record_sequence, y: icw });
                                <t t-set="ecw" t-value="bca.ecw" />
                                iecwcw = <t t-esc="ecw" />
                                graph_records[10].values.push({x: graph_record_sequence, y: ecw });

                                graph_record_sequence += 1;
                            </t>
                            nv.addGraph(function () {
                                            var chart = nv.models.multiBarChart()
                                                // .duration(350)
                                                .reduceXTicks(true)   //If 'false', every single x-axis tick label will be rendered.
                                                .rotateLabels(0)      //Angle to rotate x-axis labels.
                                                .showControls(false)   //Allow user to switch between 'Grouped' and 'Stacked' mode. 
                                                .groupSpacing(0.1)    //Distance between each group of bars.
                                                ;

                                            chart.xAxis
                                                .tickFormat(d3.format(',f'));

                                            chart.yAxis
                                                .tickFormat(d3.format(',.1f'));

                                            graph_records_2 = [{ key: 'No Response', values: [] }, { key: 'Physical F-Help', values: [{ x: 2, y: 4 }, { x: 5, y: 6 }] }, { key: 'Physical P-Help', values: [{ x: 0, y: 5 }, { x: 3, y: 3 }] }, { key: 'Modeling', values: [] },
                                            { ke: 'Virbal F-Help', values: [] }, { key: 'Virbal P-Help', values: [] }, { key: 'Geature', values: [] }, { key: 'Indepindant', values: [] }];
                                            d3.select('#chart_bca svg')
                                                .datum(graph_records)
                                                .transition().duration(350)
                                                .call(chart);

                                            nv.utils.windowResize(chart.update);

                                            return chart;
                                        });
                        </script>
                        <div class="row">
                            <div class="col-4">
                                <span>
                                    <Strong>Height: </Strong>
                                </span>
                                <span t-esc="height" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>Ideal Weight: </Strong>
                                </span>
                                <span t-esc="ideal_weight" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>Actual Weight: </Strong>
                                </span>
                                <span t-esc="actual_weight" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <span>
                                    <Strong>BMR: </Strong>
                                </span>
                                <span t-esc="bmr" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>FAT.kg: </Strong>
                                </span>
                                <span t-esc="fat_kg" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>FAT &#37;: </Strong>
                                </span>
                                <span t-esc="fat_percentage" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <span>
                                    <Strong>Mucles.kg: </Strong>
                                </span>
                                <span t-esc="mucles_kg" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>Lean Muscles: </Strong>
                                </span>
                                <span t-esc="lean_muscles" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>Fat Control.kg: </Strong>
                                </span>
                                <span t-esc="fat_control_kg" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <span>
                                    <Strong>Muscles Control.kg: </Strong>
                                </span>
                                <span t-esc="muscles_control_kg" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>ICW: </Strong>
                                </span>
                                <span t-esc="icw" />
                            </div>
                            <div class="col-4">
                                <span>
                                    <Strong>ECW: </Strong>
                                </span>
                                <span t-esc="ecw" />
                            </div>
                        </div>
                        <div t-att-id="chart_bca">
                            <svg style="height: 500px; width: 100%; text-align: left!important; direction: ltr;"></svg>
                        </div>
                        <hr/>
                        <h3>Nutrition Plan</h3>
                        <t t-set="plan_desc" t-value="" />
                        <t t-set="improvement" t-value="" />
                        <t t-set="Recomendations" t-value="" />
                        <t t-foreach="doc.nutrition_plan" t-as="nutrition_plan">
                            <t t-set="plan_desc" t-value="nutrition_plan.plan_desc" />
                            <t t-set="improvement" t-value="nutrition_plan.improvement" />
                            <t t-set="Recomendations" t-value="nutrition_plan.Recomendations" />
                        </t>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Plan Description: </Strong>
                                </span>
                                <span t-esc="plan_desc" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Plan Description: </Strong>
                                </span>
                                <span t-esc="plan_desc" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Improvement: </Strong>
                                </span>
                                <span t-esc="improvement" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Recomendations: </Strong>
                                </span>
                                <span t-esc="Recomendations" />
                            </div>
                        </div>
                        <hr/>
                        <h3>Student Orientation</h3>
                        <t t-set="desc" t-value="" />
                        <t t-set="individual_awareness" t-value="" />
                        <t t-foreach="doc.student_orientation" t-as="student_orientation">
                            <t t-set="desc" t-value="student_orientation.desc" />
                            <t t-set="individual_awareness" t-value="student_orientation.individual_awareness" />
                        </t>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Description: </Strong>
                                </span>
                                <span t-esc="desc" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Individual Awareness: </Strong>
                                </span>
                                <t t-if="individual_awareness == true">
                                    <i class="fa fa-check"></i>
                                </t>
                                <t t-else="">
                                    <i class="fa fa-remove"></i>
                                </t>
                                <!-- <span t-esc="individual_awareness" /> -->
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Follow Up: </Strong>
                                </span>
                                <t t-foreach="doc.follow_up" t-as="follow_up">
                                    <span t-field="follow_up.display_name"/>
.
                                </t>
                            </div>
                        </div>
                        <hr/>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>Created By: </Strong>
                                </span>
                                <span t-field="doc.create_uid"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>Created On: </Strong>
                                </span>
                                <span t-field="doc.create_date"/>
                            </div>
                        </div>
                    </t>

                    <!-- Report footer content -->
                </div>
            </t>
        </t>
    </template>

</odoo>