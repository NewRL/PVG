<?xml version="1.0"?>
<odoo>
    <report id="accr_nutrition_student_report" string="Student Nutrition Report" model="accr.nutrition.student" report_type="qweb-pdf" name="accr_nutrition.report_accr_nutrition_student_report_template" />
    <template id="report_accr_nutrition_student_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Report header content -->
                    <br/>
                    <br/>
                    <div class="row bg-primary">
                        <div class="col-12 h3" style="text-align: center;">
                            <span>Student Nutrition Report</span>
                        </div>
                    </div>
                    <br/>
                    <br/>

                    <t t-foreach="docs" t-as="doc">
                        <!-- Report row content -->
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Student: </Strong>
                                </span>
                                <span t-field="doc.student"/>
                            </div>
                        </div>
                        <t t-set="height" t-value="0" />
                        <t t-set="ideal_weight" t-value="0.0" />
                        <t t-set="actual_weight" t-value="0.0" />
                        <t t-set="bmr" t-value="" />
                        <t t-set="fat_kg" t-value="0.0" />
                        <t t-set="fat_percentage" t-value="0" />
                        <t t-set="mucles_kg" t-value="0.0" />
                        <t t-set="lean_muscles" t-value="0" />
                        <t t-set="fat_control_kg" t-value="0.0" />
                        <t t-set="muscles_control_kg" t-value="0.0" />
                        <t t-set="icw" t-value="0" />
                        <t t-set="ecw" t-value="0" />
                        <t t-foreach="doc.bca" t-as="bca" t-set="height" t-value="bca.height">
                            <t t-set="height" t-value="bca.height"/>
                            <t t-set="ideal_weight" t-value="bca.ideal_weight" />
                            <t t-set="actual_weight" t-value="bca.ideal_weight" />
                            <t t-set="bmr" t-value="bca.bmr.display_name" />
                            <t t-set="fat_kg" t-value="bca.fat_kg" />
                            <t t-set="fat_percentage" t-value="bca.fat_percentage" />
                            <t t-set="mucles_kg" t-value="bca,mucles_kg" />
                            <t t-set="lean_muscles" t-value="bca.lean_muscles" />
                            <t t-set="fat_control_kg" t-value="bca.fat_control_kg" />
                            <t t-set="muscles_control_kg" t-value="bca.muscles_control_kg" />
                            <t t-set="icw" t-value="bca.icw" />
                            <t t-set="ecw" t-value="bca.ecw" />
                        </t>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>Height: </Strong>
                                </span>
                                <span t-esc="height" />
                            </div>
                        </div>
                    </t>
                    <!-- Report footer content -->
                </div>
            </t>
        </t>
    </template>

</odoo>