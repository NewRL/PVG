<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_accr_mu_medications_tree" model="ir.ui.view">
            <field name="name">accr.medical.unit.medication.tree</field>
            <field name="model">accr.medical.unit.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <tree string="Medications">
                    <field name="name" />
                    <field name="side_effects" widget="many2many_tags" />
                </tree>
            </field>
        </record>

        <record id="view_accr_mu_medications_form" model="ir.ui.view">
            <field name="name">accr.medical.unit.medication.form</field>
            <field name="model">accr.medical.unit.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <form string="Medications">
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="4"/>
                        </group>
                        <group col="4">
                            <field name="discription" colspan="4"/>
                        </group>
                        <group col="4" string="Side Effects">
                            <field name="side_effects" nolabel="1" />
                        </group>
                        <group col="4" string="Alternetive Medications">
                            <field name="alternetive_medications" nolabel="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_accr_mu_medications_search" model="ir.ui.view">
            <field name="name">accr.medical.unit.medication.search</field>
            <field name="model">accr.medical.unit.medication</field>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <search string="Medications">
                    <field name="name" select="True" string="Side Effect"/>
                    <field name="side_effects" select="True" />
                    <field name="discription" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_accr_mu_medications_view">
            <field name="name">Medications</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">accr.medical.unit.medication</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_accr_mu_medications_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_accr_mu_medications_view_form">
            <field name="act_window_id" ref="act_open_accr_mu_medications_view" />
            <field name="sequence" eval="20" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_accr_mu_medications_form" />
        </record>

        <record model="ir.actions.act_window.view" id="act_open_accr_mu_medications_view_tree">
            <field name="act_window_id" ref="act_open_accr_mu_medications_view" />
            <field name="sequence" eval="10" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_accr_mu_medications_tree" />
        </record>

    </data>
</odoo>