<?xml version="1.0" ?>
<odoo>
    <record id="module_students_category" model="ir.module.category">
        <field name="name">ACCR Students</field>
    </record>

    <!-- Students Scheduler User Group -->
    <record id="students_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_students_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="students_group_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="module_students_category"/>
        <field name="implied_ids" eval="[(4, ref('students_group_user'))]"/>
    </record>

    <!-- Students Scheduler Manager Group -->
    <record id="students_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_students_category"/>
        <field name="implied_ids" eval="[(4, ref('students_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
    </record>

