<?xml version="1.0"?>
<odoo>
    <report id="accr_student_special_education_report" string="Student Special Education Report" model="accr.student.se.report" report_type="qweb-html" name="accr_student.report_accr_student_se_report_template" />
    <template id="report_accr_student_se_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Report header content -->
                    <script type="text/javascript" src="/web/static/lib/nvd3/d3.v3.js" />
                    <script type="text/javascript" src="/web/static/lib/nvd3/nv.d3.js"/>
                    <br/>
                    <br/>
                    <div class="row bg-primary">
                        <div class="col-12 h3" style="text-align: center;">
                            <span>Student Special Education Report</span>
                        </div>
                    </div>
                    <br/>
                    <br/>

                    <t t-foreach="docs" t-as="doc">
                        <!-- Report row content -->
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>Name: </Strong>
                                </span>
                                <span t-field="doc.name"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>Arabic Name: </Strong>
                                </span>
                                <span t-field="doc.arabic_name"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>Joining Date: </Strong>
                                </span>
                                <span t-field="doc.joining_date"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>Birth Date: </Strong>
                                </span>
                                <span t-field="doc.birth_date"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <span>
                                    <Strong>File_no: </Strong>
                                </span>
                                <span t-field="doc.file_no"/>
                            </div>
                            <div class="col-6">
                                <span>
                                    <Strong>Gander: </Strong>
                                </span>
                                <span t-field="doc.gander"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span>
                                    <Strong>Diagnosis: </Strong>
                                </span>
                                <span t-field="doc.diagnosis"/>
                            </div>
                        </div>
                        <hr/>
                        <h3>Categoires of Plan</h3>
                        <!-- <t t-forecah="doc.plan_categories" t-as="category">
                            <div class="row">
                                <div class="col-2">
                                    <span t-field="category.x_studio_se_category.x_name"/>
                                </div>
                                <div class="col-10">
                                    <t t-foreach="doc.plan_response_forms" t-as="response_form" t-if="response_form.x_studio_plan_category == category">
                                        <span t-field="response_form.x_studio_plan_long_term_goals"/>
                                    </t>
                                </div>
                            </div>
                        </t> -->
                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>